	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="475dp"
		android:orientation="vertical"
		android:paddingLeft="21dp"
		android:paddingRight="21dp">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingBottom="10dp"
			android:paddingTop="10dp">
			<ImageView
				android:layout_width="42dp"
				android:layout_height="42dp"
				android:src="@drawable/icon" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingLeft="10dp">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/comment_main_user"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:fontFamily="Roboto"
						android:textColor="#3F89E7"
						android:textSize="16sp" />
					<TextView
						android:id="@+id/comment_main_location"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:fontFamily="Roboto"
						android:textColor="#939393"
						android:textSize="16sp" />
				</RelativeLayout>

				<TextView
					android:id="@+id/comment_main_time"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:fontFamily="Roboto"
					android:paddingTop="6dp"
					android:textColor="#939393"
					android:textSize="11sp" />
			</LinearLayout>
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#E6E6EA" />
		<TextView
			android:id="@+id/comment_main_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:fontFamily="Roboto"
			android:maxLines="2"
			android:textColor="#2A2C30"
			android:textSize="21sp"
			android:textStyle="bold" />
		<TextView
			android:id="@+id/comment_main_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:fontFamily="Roboto"
			android:paddingBottom="10dp"
			android:paddingTop="10dp"
			android:textColor="#77797C"
			android:textSize="16sp" />
		<ImageView
		android:id="@+id/comment_main_image"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scaleType="centerCrop" />
	</LinearLayout>
    <View
        android:layout_width="match_parent"
